{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make",
      "args": [
        "nmake"
      ]
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "make",
      "args": [
        "run"
      ]
    },
    {
      "label": "Build & Run",
      "type": "shell",
      "dependsOn": [
        "Build",
        "Run"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make",
      "args": [
        "clean"
      ]
    }
  ]
}